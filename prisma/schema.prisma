generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ROOT
  MODERATOR
  USER
}

model Graph {
  graphId       BigInt    @id @default(autoincrement()) // id of the graph
  graphTagline  String    @default("") // tagline of the graph
  graphTitle    String    // title of the graph
  graphAuthor   String    // author of the graph
  graphPath     String    // should be something like "/img/graphs/123.png"
  graphApproved Boolean   @default(false) // whether the graph is approved by the admin
}

model User {
  userId        BigInt    @id @default(autoincrement()) // id of the user
  userRole      UserRole  @default(USER) // role of the user
  userGraph     BigInt[]  @default([]) // array of graph ids
}
